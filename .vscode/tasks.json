{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ build all files",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"\"${workspaceFolder}\"/*.cpp",
				"-c"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"presentation": {
				"clear": true
			},
			"detail": "compiler: /usr/bin/clang++"
		},
		{
			"label": "Move files",
			"type": "shell",
			"command": "./scripts/moveOutput.sh",
			"windows": {
				"command": ".\\scripts\\moveOutput.cmd"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": [],
			"dependsOn": "C/C++: clang++ build all files"
		},
	]
}